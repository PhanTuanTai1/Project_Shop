
        <table class="table table-data2">
            <thead>
                <tr>
                    <th>
                        <label class="au-checkbox">
                            <input type="checkbox">
                            <span class="au-checkmark"></span>
                        </label>
                    </th>
                    <th>Category Name</th>
                    <th>Product Name</th>
                    <th>Brand</th>
                    <th>Color</th>                
                    <th>Quantity</th>                    
                </tr>
            </thead>
            <tbody>
                <%products.forEach(function(product){%>
                    <tr class="tr-shadow">
                            <td>
                                <label class="au-checkbox">
                                    <input type="checkbox">
                                    <span class="au-checkmark"></span>
                                </label>
                            </td>
                            <td><%=product.CategoryName%></td>
                            <td>
                                <%=product.ProductName%>
                            </td>
                            <td class="desc"><%=product.Brand%></td>
                            <td><%=product.Color%></td>
                            <td id="display_product<%=product.ProductID%>">
                                <%if(typeof(product.Quantity) == "undefined"){%>
                                    0
                                <%}else{%>
                                    <%=product.Quantity%>
                                <%}%>
                            </td>
                            <td>
                                <div>
                                    <button onclick="setPID(this)"  class="btn btn-success" data-id="<%=product.ProductID%>" data-toggle="modal" data-original-title="Delete" data-target="#mediumModalUpdateQuantity">
                                        <i class="zmdi zmdi-edit"></i> Update Quantity
                                    </button>                                
                                </div>
                            </td>
                        </tr>
                        <tr class="spacer"></tr>
                <%})%>                 
            </tbody>
        </table>
    <!-- END DATA TABLE -->